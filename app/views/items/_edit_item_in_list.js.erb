//Quito la ventana modal
$('#edit-item-form').modal('hide');

$('#edit-item-form').on('hidden', function () {
  //Cuando la modal se quita, oculto el contenedor principal, le cargo los datos nuevos y destruyo el masonry, todo esto no se ve
  $('#ppal_container')
  .hide()
  .html("<%= escape_javascript(render :partial => 'items/partials/item').html_safe %>")
  .masonry('destroy');

  //REcargo el masonry y dejo que se vea todo
  builditemMosaic();
  $('#ppal_container').show();

  //Elimino la ventana modal
  delete $(this);
})