<% content_for :header do %>
  <%= render :partial => 'application/header' %>
<% end %>

<% content_for :user_side do %>
  <%= render :partial => 'application/user_container' %>
<% end %>

<% content_for :content_side do %>
  <div class="right_container" id="rightContainer">
    <section class="main_container" id="content-side">
      <div class="add_request_invitation hidden_container" id="add_request_invitation">
        <div class="arrow-left"></div>
        <div class="invitation_text">WANT RECIBE OFFERS??</div>
        <div class="invitation_button">
          <%= link_to "THEN REQUEST SOMETHING",
            new_user_request_path(@user),
            {:remote => true, :class => "new_request_invitation_button_style"}
          %>
        </div>
      </div>

      <nav class="nav_bar" id="navigation_bar">
        <%= render :partial => 'application/navigation_bar' %>
      </nav>

      <aside class="main_container_elementList" id="ppal_container" offerWidth="286">
        <div class="item">
          <div class="item_image">
            <%= link_to add_item_image,
                new_user_item_path(@user),
                {:remote => true}
            %>
          </div>

          <div class="item_description">
            <div class="text">Add a Product</div>
          </div>

          <!-- <div class="item_options">
            <%#= link_to "Edit product",
              edit_user_item_path(@user,item),
              :class => "item_buttons_style",
              :remote => true %>
          </div> -->
        </div>

        <% items(@user).reverse_each do |item| %>
          <div class="item" id="<%= id(item) %>">
            <div class="item_image">
              <%= link_to products_wall_item_image(item),
                edit_user_item_path(@user, item),
                {:remote => true}
              %>
            </div>

            <!-- <div class="item_quantity">
              <div class="quantity_number"><%#= stock(item) %></div>
            </div> -->

            <div class="item_description">
              <div class="text">
                <%= name(item) %>
              </div>
            </div>

            <!-- <div class="item_options">
              <%#= link_to "Edit product",
                edit_user_item_path(@user,item),
                :class => "item_buttons_style",
                :remote => true %>
            </div>-->

          </div>
        <% end %>
      </aside>
    </section>
  </div>
<% end %>
