<% content_for :header do %>
  <%= render :partial => 'application/header' %>
<% end %>


<% content_for :user_side do %>
  <%= render :partial => 'application/user_container' %>
<% end %>


<% content_for :content_side do %>

<div class="right_container" id="rightContainer">

  <section class="main_container" id="content-side">

    <div class="add_request_invitation hidden_container" id="add_request_invitation">
      <div class="arrow-left"></div>
      <div class="invitation_text">WANT RECIBE OFFERS??</div>
      <div class="invitation_button">
        <%= link_to "THEN REQUEST SOMETHING",
          new_user_request_path(@user),
          {:remote => true, :class => "new_request_invitation_button_style"}
        %>
      </div>
    </div>

    <nav class="nav_bar" id="navigation_bar">
      <%= render :partial => 'application/navigation_bar' %>
    </nav>

    <aside class="main_container_elementList" id="ppal_container" offerWidth="286">
      <% deals(@user).each do |deal| %>

        <div class="deal" id="<%= id(deal) %>">

          <div class="negotiation_offer">

            <div class="oponent_info">
              <div class="oponent_image">
                <%= negotiation_user_face_image(composer(agreement(deal))) %>
              </div>
              <div class="oponent_description">
                <div class="oponent_name">
                  <%= first_name(composer(agreement(deal))) %>
                </div>
                <div class="oponent_address">
                  <%= full_name(composer(agreement(deal))) %>
                </div>
              </div>
            </div>

            <div class="offer_triangle">
              <div class="triangle"></div>
            </div>

            <div class="offer_items">
              <div class="recieved">
                <% composer_products(agreement(deal)).each do |product| %>
                  <div class="image_container">
                    <%= item_image_big(product) %>
                    <div class="description">
                      <%= name(product) %>
                    </div>
                  </div>
                <% end %>
              </div>
              <div class="given">
                <% receiver_products(agreement(deal)).each do |product| %>
                  <div class="image_container">
                    <%= item_image_small(product) %>
                    <div class="description">
                      <%= name(product) %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>

            <!-- <div class="offer_info">

              <div class="offer_buttons">

              </div>

            </div> -->

          </div>

          <div class="dialog_container">

            <div class="dialog_head">
              <div class="option_icons">
                <!-- <div class="icon"><%#= image_tag("/assets/images/close.png") %></div> -->
              </div>
            </div>

            <div class="conversation" id="conversationofnegotiation">
              <% messages(deal).each do |message| %>
                <div class="comment">
                  <div class="comment_user_image">
                    <%= message_user_face_image(message) %>
                  </div>
                  <div class="comment_text">
                    <%= text(message) %>
                  </div>
                  <div class="comment_datetime">
                    <%= date_time(message) %>
                  </div>
                </div>
              <% end %>
              <div class="option_buttons">
                <div class="icon"><%= sound_icon %></div>
                <div class="icon"><%= video_icon %></div>
              </div>
            </div>

            <div class="writting_box">
              <div class="message">
               <%= form_for [@user,@deal], url: {action: "pusher_message"}, :remote => true do |form| %>
                <textarea class="txt_area_writer" id="message_writer" name="message"></textarea>
                <input type="hidden" name="deal_id" value="<%= id(deal)%>">
                <input type="hidden" name="sender_image_tag" id="sender_image_tag" value="0">
                <%= form.submit "Send", :id => "send_message_button" %>
               <% end %>
              </div>
            </div>

          </div>
        </div>

      <% end %>

    </aside>

  </section>

</div>


<% end %>






