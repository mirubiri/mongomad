<% deals(current_user).each do |deal| %>

  <div class="deal">

    <div class="deal_header">
      <div class="deal_users">
        <div class="deal_user">
          <%= image(deal) %>
          <div class="deal_user_name">Sergio</div>
        </div>
        <div class="deal_user">
          <%= deal_image(deal) %>
        </div>
        <div class="deal_user">
          <%= image(deal) %>
          <div class="deal_user_name">Sergio</div>
        </div>
      </div>
      <div class="deal_options">
        <div class="deal_option">
          <div class="deal_button">PDF</div>
        </div>
        <div class="deal_option">
          <div class="deal_button">Validar Trato</div>
        </div>
        <div class="deal_option">
          <div class="deal_button">Cancelar</div>
        </div>
      </div>
    </div>

    <div class="dialog_container">

      <div class="conversation" id="conversationofdeal">
        <% messages(deal).each do |message| %>
          <div class="comment">
            <div class="comment_user_image">
              <%= image(message) %>
            </div>
            <div class="comment_text">
              <%= text(message) %>
            </div>
            <div class="comment_datetime">
              <%= date_time(message) %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="writting_box">
        <div class="user_writing">
          <%= image(deal) %>
        </div>
        <form>
          <div class="message">
            <input type="text" placeholder="write here" name="text">
          </div>
        </form>
      </div>

    </div>


  </div>
<% end %>