= form_for(:login, url: new_user_session_path) do |login|
  div
    = login.email_field :email, :placeholder => "nombre de usuario o correo electrónico", autofocus: true
  div
    = login.password_field :password, :placeholder => "contraseña", autocomplete: "off"
  - if Devise.mappings[:user].modules.include? :rememberable
    div
      = login.check_box :remember_me
      = login.label :remember_me
  div
    = login.submit "iniciar sesión"

