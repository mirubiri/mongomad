= form_for :user, url: users_sign_up_path do |registration|
  div
    = registration.text_field :full_name, :placeholder => "nombre completo"
  div
    = registration.email_field :email, :placeholder => "correo electrónico"
  div
    = registration.password_field :password, :placeholder => "contraseña", autocomplete: "off"
