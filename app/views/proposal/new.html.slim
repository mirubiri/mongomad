- content_for :expositor
  | offers

.proposal#new_proposal
  .goods_side
    .user_selector
      .composer_face
        = user_image(current_user,100,100)
      .receiver_face
        = user_image(data.visited_user,100,100)

    .good_selector
      .composer_goods
        .composer_cash
          = element :good, view: :cash
        .composer_items
          - data.my_items.each do |item|
            = element :good, view: :item, data:item

      .receiver_goods
        .receiver_cash
          = element :good, view: :cash
        .receiver_items
          - data.his_items.each do |item|
            = element :good, view: :item, data:item

    .good_previewer
      .images
        - 1.upto(3) do |index|
          .image
      .name
      .description

  .proposal_side
    .proposal_preview
      .title
        = current_user.full_name

      .proposal
        .composer_goods
        .receiver_goods

      .avatar
        = user_image(current_user,80,80)

      = render partial: 'proposal/offer_form', layout: 'proposal/layouts/offer', locals:{ offer:offer }
