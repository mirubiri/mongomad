<%= form_for @request do |form| %>

  <% if @request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@request.errors.count, "error") %> prohibited this request from being saved:</h2>
      <ul>
        <% @request.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="new_request_title">
    <div class="icon">icono de nueva peticion</div>
    <div class="description">Nueva Petición</div>
  </div>
  <div class="new_offer_text">
    <%= text_area :request, :text %>
  </div>
  <div class="send_button">
    <button type="button" name="boton" value="" 
    class="add_offer_button">
      <%= form.submit %> Enviar Petición
    </button>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
