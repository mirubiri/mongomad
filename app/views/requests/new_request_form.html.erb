<div class="new-request-form" id="new-request-form">
  <%= form_for [@user, Request.new], :remote => true do |form| %>
    <div class="new_petition_content">
      <div class="petition_transparent_side">
        <div class="petition_user_image">
          <%= new_request_user_image(@user) %>
        </div>
      </div>

      <div class="petition_user_side">
        <div class="petition_title">Which is your request?</div>
      </div>

      <div class="petition_text_side">
        <div class="petition_text">
          <%= form.text_area :text, :placeholder => "Make your request here...", :size => "24x6" %>
        </div>

        <div class="petitions_buttons_side">
          <div class="send_button">
            <button class="offer_buttons_style">X</button>
              <%= form.submit "Request", :class => 'offer_buttons_style', :id => 'new-request-send-button' %>
            <div class="characters_left">89/150</div>
          </div>
        </div>
      </div>

    </div>
  <% end %>
</div>
