<div class="request">
  <div class="profile_image">      
    <%= request_image(@request) %>
  </div>
  <div class="description">
    <%= request_text(@request) %>      
  </div>
  <div class="options_menu hidden_container">
    <%= link_to 'delete',
            user_request_path(current_user,id(@request)),
            :method => :delete,
            :confirm => "Are you sure?" %>
    <%= link_to "edit", 
            {:controller => "requests", 
            :action => "edit",
            :user_id => id(current_user), 
            :id => @request.id}, 
            {:remote => true,
             :id => "edit_request_link"} %>              
  </div>    
</div>