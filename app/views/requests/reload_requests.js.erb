$('#edit-request-form').dialog('close');
$('#request_list_container').html("<%= escape_javascript(render :partial => 'application/request_list').html_safe %>");

var request_id = "<%= id(@request) %>";

$('#request_list_container')
.find("#"+request_id)
.addClass("new_request_style")
.animate({backgroundColor: '#ffffff'}, 3000, function(){
  $(this).removeClass("new_request_style");
});


