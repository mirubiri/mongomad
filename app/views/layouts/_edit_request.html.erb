<div class="modal modal-request hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" id="edit-request-form">
  <%= form_for [current_user, @request], :remote => true do |form| %>
    <div class="new_petition_content">
      <div class="new_petition_title">
        <div class="description">Editar Petici√≥n</div>
        <div class="user">
          <%= user_logged_image %>
        </div>
        <div class="user_name">
          <%= user_logged_name %>
        </div>
      </div>
      <div class="new_offer_text">
        <%= form.text_area :text, :size => "24x6" %>
      </div>
      <div class="action">
        <div class="send_button">
          <button class="btn" data-dismiss="modal" aria-hidden="true">Cancelar</button>
          <%= form.submit "Editar", :id => 'edit-request-send-button', :class =>  "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>