<div class="modal modal-request hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" id="new-request-form">
  <%= form_for [current_user, @request], :remote => true do |form| %>
    <div class="new_petition_content">

      <div class="petition_text_side">
        <div class="petition_text">
          <%= form.text_area :text, :placeholder => "Texto de la peticion", :size => "24x6" %>
        </div>
        <div class="petitions_buttons_side">
          <div class="send_button">
            <button class="btn btn-primary btn-mini" data-dismiss="modal" aria-hidden="true">X</button>
            <%= form.submit "Añadir", :id => 'new-request-send-button', :class =>  "btn btn-mini" %>
            <div class="characters_left">89</div>
          </div>
        </div>
      </div>

      <div class="petition_user_side">
        <div class="petition_user_image">
          <%= image(@user) %>
        </div>
        <div class="petition_title">¿Cuál es tu petición?</div>
      </div>

    </div>
  <% end %>
</div>
