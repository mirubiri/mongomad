<div class="new_offer_content" id="new-offer-form">
  <%= form_for [current_user,@offer] do |form| %>

    <div class="products_area">
      <div class="title">
        <a href="#blank" id="new_offer_receiver_selector" value="<%=user_logged_id%>">
          <div class="user_products_selector user_selected" id="receiver_selector_area">
            <div class="user_image">
              <%= user_visited_image %>
            </div>
            <div class="description">
              <%= user_visited_name %>
            </div>
          </div>
        </a>
        <a href="#blank" id="new_offer_composer_selector" value="<%=user_visited_id%>">
          <div class="user_products_selector" id="composer_selector_area">
            <div class="user_image">
              <%= user_logged_image %>
            </div>
            <div class="description">
              <%= user_logged_name %>
            </div>
          </div>
        </a>
      </div>
      <div class="his_products" id="receiver_products_container">
        <div class="money">
          <textarea name="" id="dineroPides" cols="1" rows="1" placeholder="Cantidad que pides"></textarea>
          <button id="dineroPidesBotonAgregar">add</button>
        </div>
        <div class="product_container" id="his_product_container">
          <% user_visited_things.each do |thing| %>
            <div class="product" id="<%= thing._id%>">              
              <div class="product_image">
                <%= thing_image(thing) %>
              </div>
              <div class="product_title">
                <%= thing_name(thing) %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="my_products container_invisible" id="composer_products_container">
        <div class="money">
          <textarea name="" id="dineroOfreces" cols="1" rows="1" placeholder="Cantidad que ofreces"></textarea>
          <button id="dineroOfrecesBotonAgregar">add</button>
        </div>
        <div class="product_container" id="my_product_container">
          <% user_logged_things.each do |thing| %>
            <div class="product" id="<%= thing._id%>">              
              <div class="product_image">
                <%= thing_image(thing) %>
              </div>
              <div class="product_title">
                <%= thing_name(thing) %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    
    <input type="hidden" name="offer[user_composer_id]" value="<%= user_logged_id%>" />
    <input type="hidden" name="offer[user_receiver_id]" value="<%= user_visited_id%>" />
    <input type="hidden" name="offer[money][nil]" value="0" id="usuario_dinero" />  


    <div class="offer_summary">
      <div class="title">
        <div class="description">Resumen de la oferta</div>
      </div>
      <div class="summary">
        <div class="summary_header">
          <div class="summary_header_image">
            <%= user_logged_image %>
          </div>
          <div class="summary_header_text">
            <div class="nombre_usuario">Sergio</div>
            <%= text_area_tag(:message, "Mensaje inicial", :size => "5x2") %>
          </div>
          <div class="triangle"></div>
        </div>
        <div class="summary_body">
          <div class="summary_body_products_given" id="summary_offer_given_products_container">
            <div class="money_given" id="dineroOfrecesEnSumario">
              <div class="money_composition"></div>
            </div>
          </div>
          <div class="summary_body_products_received" id="summary_offer_received_products_container">
            <div class="money_received" id="dineroPidesEnSumario">
              <div class="money_composition"></div>
            </div>
          </div>
        </div>
      </div>
        <div class="summary_footer">
          <div class="actions">
            <%= form.submit %>
          </div>
        </div>
    </div>

  <% end %>
</div>