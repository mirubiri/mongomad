<% user_visited_requests.each do |request| %>
  <div class="request">
    <div class="profile_image">      
      <%= request_image(request) %>
    </div>
    <div class="description">
      <%= request_text(request) %>      
    </div>
    <div class="options_menu hidden_container">
      <%= link_to 'delete',
              user_request_path(current_user,request_id(request)),
              :method => :delete,
              :confirm => "Are you sure?" %>      
    </div>    
  </div>
<% end %>