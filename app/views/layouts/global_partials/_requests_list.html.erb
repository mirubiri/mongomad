<% @user.requests.each do |request| %>
  <div class="request">
    <div class="profile_image">      
      <%= request_image(request) %>
    </div>
    <div class="description">
      <%= request_text(request) %>      
    </div>
    <%= link_to "x", 
                  user_request_path(current_user,request_id(request)),
                  :method => :delete, 
                  :confirm => "Are you sure?" %>
  </div>
<% end %>