<aside class="user_container_requests" id="user_request_list">  
  <% if user_logged_id == user_visited_id %>
    <div class="btn-toolbar">
        <%= link_to "Pide Algo!!",
          new_user_request_path(current_user),
          {:remote => true, :role => "button", :class => "btn btn-success"} 
        %>    
        <div class="requestWritingBox" id="request-writing-box">
          <%= render :partial => 'requests/partials/form' %>
        </div> 
    </div>       
  <% end %> 
  <aside class="requests_requestsList" id="request_list_container">
    <% if (user_visited_requests.count != 0)%>
      <%= render :partial =>
      'layouts/global_partials/requests_list' %>
    <% else %>
      <div class="no_elements">
        <p>El usuario no tiene ninguna peticion actualmente</p>
      </div>      
    <% end %>            
  </aside>
</aside>