<aside class="user_container_profile">
  <div class="image">
    <%= user_visited_image %>
  </div>
  <div class="user_name">
    <%= user_visited_nickname %></br>
    <%= user_visited_country %></br>
  </div>

  <% if controller.controller_name == 'users' || controller.controller_name == 'offers' %>
    <a href="newOffer.html" target="_blank">
      <%= button_tag "Nueva Oferta", :class => "add_offer_button",
      :id => "new-offer-button" %>
    </a>
  <% end %>

  <nav class="profile_menu">
    <div class="menu_icon">
      <%= link_to 'Perfil', user_profile_path(@user), :remote => true, :id => "link_profile" %>
    </div>
    <div class="menu_icon">
      <%= link_to 'Prod', user_things_path(@user), :remote => true, :id => "link_things" %>
    </div>
    <div class="menu_icon">
      <%= link_to 'Alertas'%>
    </div>
    <div class="menu_icon">
      <%#= link_to 'Alertas', user_alerts_path(current_user) %>
    </div>
  </nav>
</aside>