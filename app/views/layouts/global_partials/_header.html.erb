<div class="header">

  <div class="clearfix header_container">

    <% if user_signed_in? %>
      <div class="header_user_data">
        <div class="header_user_description">
          <div class="header_description_element"><%= first_name(current_user) %></div>
          <div class="header_description_element"><%= last_name(current_user) %></div>
        </div>
        <div class="header_user_image">
          <div class="header_user-image_container">
            <%= link_to image(@user),
                :controller => "users",
                :action => "show",
                :id => id(current_user)
            %>
          </div>
        </div>
      </div>
    <% end %>

    <div class="header_navigation_icons"  id="page_header_options">
      <nav class="header_menu">
          <div class="header_menu_icon">
            <%= link_to image_tag("/assets/images/friends.png"),
                user_profile_path(@user),
                :remote => true,
                :id => "link_profile"%>
          </div>
          <div class="header_menu_icon">
            <%= link_to image_tag("/assets/images/products.png"),
                user_items_path(@user),
                :remote => true,
                :id => "link_items"%>
          </div>
          <div class="header_menu_icon">
            <%= link_to image_tag("/assets/images/negotiations.png"),
                user_alerts_path(@user),
                :remote => true,
                :id => "link_items"%>
          </div>
          <div class="header_menu_icon">
            <%= link_to image_tag("/assets/images/deals.png"),
                user_deals_path(@user),
                :remote => true,
                :id => "link_items"%>
          </div>
        </nav>
    </div>

    <div class="header_options">

      <div class="header_options_logout">
        <% if user_signed_in? %>
          <%= link_to "sign out", destroy_user_session_path,:method => :delete %>
          <% else %>
            <%= link_to "sign up", new_user_registration_path %>
            or <%= link_to "sign in", new_user_session_path %>
        <% end %>
      </div>

      <div class="header_options_search">
        <input type="search" name="busqueda" />
      </div>

    </div>

  </div>
</div>