<div class="header">
  <div class="clearfix header_container">
    <% if user_signed_in? %>
      <div class="header_user_image">
        <%= link_to user_image(@user),
            :controller => "users",
            :action => "show",
            :id => current_user.id
        %>
      </div>
      <div class="header_user_description">
        <p><%= user_first_name(current_user) %></p>
        <p><%= user_last_name(current_user) %></p>
      </div>
    <% end %>

    <div class="header_options"  id="page_header_options">
      <nav class="header_menu" >
        <div class="btn-toolbar">
          <div class="btn-group">
            <%= link_to image_tag("/assets/images/friends.png"),
                user_profile_path(@user),
                :remote => true,
                :id => "link_profile"%>
          </div>
          <div class="btn-group">
            <%= link_to image_tag("/assets/images/products.png"),
                user_items_path(@user),
                :remote => true,
                :id => "link_items"%>
          </div>
          <div class="btn-group">
            <%= link_to image_tag("/assets/images/negotiations.png"),
                user_items_path(@user),
                :remote => true,
                :id => "link_items"%>
          </div>
          <div class="btn-group">
            <%= link_to image_tag("/assets/images/deals.png"),
                user_items_path(@user),
                :remote => true,
                :id => "link_items"%>
          </div>
        </div>
      </nav>
    </div>

    <div class="header_logo">
      <img src="/assets/images/logo.png" alt="logotipo">
    </div>

    <div class="header_options" style="float:right; margin-right: 10px">
      <nav class="header_menu" >
        <div class="btn-toolbar">

          <div class="btn-group">
            <%= link_to image_tag("/assets/images/products.png"),
                user_items_path(@user),
                :remote => true,
                :id => "link_items"%>
          </div>
          <div class="btn-group">
            <%= link_to image_tag("/assets/images/negotiations.png"),
                user_items_path(@user),
                :remote => true,
                :id => "link_items"%>
          </div>
          <div class="btn-group">
            <%= link_to image_tag("/assets/images/deals.png"),
                user_items_path(@user),
                :remote => true,
                :id => "link_items"%>
          </div>
        </div>
      </nav>
      <input type="search" name="busqueda" />

      <% if user_signed_in? %>
        <%= link_to "sign out", destroy_user_session_path,:method => :delete %>
        <% else %>
          <%= link_to "sign up", new_user_registration_path %>
          or <%= link_to "sign in", new_user_session_path %>
      <% end %>

    </div>

  </div>
</div>