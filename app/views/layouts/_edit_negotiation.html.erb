<div class="modal modal-offer hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" id="edit-negotiation-form">
  <%= form_for [@user,@negotiation] do |form| %>
    <div class="products_area">
      <div class="title">
        <a href="#blank" id="new_offer_receiver_selector" value="<%=user_logged_id%>">
          <div class="user_products_selector user_selected" id="receiver_selector_area">
            <div class="user_image">
              <%= negotiation_receiver_image(@negotiation) %>
            </div>
            <div class="description">
              <%= negotiation_receiver_name(@negotiation) %>
            </div>
          </div>
        </a>
        <a href="#blank" id="new_offer_composer_selector" value="<%=user_visited_id%>">
          <div class="user_products_selector" id="composer_selector_area">
            <div class="user_image">
              <%= negotiation_composer_image(@negotiation) %>
            </div>
            <div class="description">
              <%= negotiation_composer_name(@negotiation) %>
            </div>
          </div>
        </a>
      </div>
      <div class="his_products" id="receiver_products_container">
        <div class="money">
          <textarea name="" id="dineroPides" cols="1" rows="1" placeholder="Cantidad que pides"></textarea>
          <button id="dineroPidesBotonAgregar">add</button>
        </div>
        <div class="product_container" id="his_product_container">
          <% negotiation_composer(@negotiation).things.each do |thing| %>
            <div class="product" id="<%= thing._id%>" value="<%= thing_stock(thing) %>">
              <div class="quantity_container"><%= thing_stock(thing) %></div>
              <div class="product_image">
                <%= thing_image(thing) %>
              </div>
              <div class="product_title">
                <%= thing_name(thing) %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="my_products container_invisible" id="composer_products_container">
        <div class="money">
          <textarea name="" id="dineroOfreces" cols="1" rows="1" placeholder="Cantidad que ofreces"></textarea>
          <button id="dineroOfrecesBotonAgregar">add</button>
        </div>
        <div class="product_container" id="my_product_container">
          <% negotiation_receiver(@negotiation).things.each do |thing| %>
            <div class="product" id="<%= thing._id%>" value="<%= thing_stock(thing) %>">
              <div class="quantity_container"><%= thing_stock(thing) %></div>
              <div class="product_image">
                <%= thing_image(thing) %>
              </div>
              <div class="product_title">
                <%= thing_name(thing) %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>


    <input type="hidden" name="offer[user_composer_id]" value="<%= user_logged_id%>" />
    <input type="hidden" name="offer[user_receiver_id]" value="<%= user_visited_id%>" />
    <input type="hidden" name="offer[money][user_id]" value="nil" id="usuario_id" />
    <input type="hidden" name="offer[money][quantity]" value="0" id="usuario_dinero" />


    <div class="offer_summary">
      <div class="title">
        <div class="description">Resumen de la oferta</div>
      </div>
      <div class="offer_inform">      
        <div class="offer_header">
          <div class="triangle">            
              <!-- <img src="http://localhost:3000/images/optionsicon.png" alt="options" id="options_button"> -->
          </div>
          <div class="profile_image">
            <%= negotiation_composer_image(@negotiation) %>
          </div>
          <div class="description">            
            <div class="offer_message">
              <%#= form.text_area :initial_message,
              :placeholder => "Mensaje Inicial",
              :rows => "2" %>
            </div>            
          </div>
        </div>
        <div class="offer_things">         
          <div class="recieved" id="summary_offer_received_products_container">
            <% negotiation_receiver_products(@negotiation).each do |product| %>
              <div class="product" id="<%= product._id%>" value="<%= product_quantity(product) %>">
                <div class="quantity_container"><%= product_quantity(product) %></div>
                <div class="product_image">
                  <%= product_image(product) %>
                </div>
                <div class="product_title">
                  <%= product_name(product) %>
                </div>
              </div>
            <% end %>
            <div class="money_received" id="dineroPidesEnSumario">
              <div class="money_composition"></div>
            </div>
          </div>
          <div class="given" id="summary_offer_given_products_container">
            <% negotiation_composer_products(@negotiation).each do |product| %>
              <div class="product" id="<%= product._id%>" value="<%= product_quantity(product) %>">
                <div class="quantity_container"><%= product_quantity(product) %></div>
                <div class="product_image">
                  <%= product_image(product) %>
                </div>
                <div class="product_title">
                  <%= product_name(product) %>
                </div>
              </div>
            <% end %>
            <div class="money_given" id="dineroOfrecesEnSumario">
              <div class="money_composition"></div>
            </div>
          </div>
        </div>

        <div class="offer_button">
          <%= form.submit "submit", :id => 'new-offer-send-button', :class =>  "btn btn-primary" %>
          <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        </div>
          
      </div>
    </div>        
  <% end %>
</div>