<div class="modal modal-offer hide" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" id="edit-offer-form">
  <%= form_for [current_user,@offer], :remote => true do |form| %>
    <div class="products_area">
      <div class="title">
        <a href="#blank" id="new_offer_receiver_selector" value="<%= proposal_receiver_id(@offer.proposal) %>">
          <div class="user_products_selector user_selected" id="receiver_selector_area">
            <div class="user_image">
              <%= proposal_receiver_image(@offer.proposal) %>
            </div>
            <div class="description">
              <%= proposal_receiver_name(@offer.proposal) %>
            </div>
          </div>
        </a>
        <a href="#blank" id="new_offer_composer_selector" value="<%= proposal_composer_id(@offer.proposal) %>">
          <div class="user_products_selector" id="composer_selector_area">
            <div class="user_image">
              <%= proposal_composer_image(@offer.proposal) %>
            </div>
            <div class="description">
              <%= proposal_composer_first_name(@offer.proposal) %>
            </div>
          </div>
        </a>
      </div>
      <div class="his_products" id="receiver_products_container">
        <div class="money">
          <textarea name="" id="dineroPides" cols="1" rows="1" placeholder="Cantidad que pides"></textarea>
          <button id="dineroPidesBotonAgregar">add</button>
        </div>
        <div class="product_container" id="his_product_container">
          <% proposal_receiver_products(@offer.proposal).each do |product| %>
            <div class="product" item_id="<%= item_id(product.item) %>" stock="<%= stock(product.item) %>">
              <div class="quantity_container"></div>
              <div class="product_image">
                <%= image(product.item) %>
              </div>
              <div class="product_title">
                <%= name(product.item) %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="my_products container_invisible" id="composer_products_container">
        <div class="money">
          <textarea name="" id="dineroOfreces" cols="1" rows="1" placeholder="Cantidad que ofreces"></textarea>
          <button id="dineroOfrecesBotonAgregar">add</button>
        </div>
        <div class="product_container" id="my_product_container">
          <% proposal_composer_products(@offer.proposal).each do |product| %>
            <div class="product" item_id="<%= item_id(product.item) %>" stock="<%= stock(product.item) %>">
              <div class="quantity_container"></div>
              <div class="product_image">
                <%= image(product.item) %>
              </div>
              <div class="product_title">
                <%= name(product.item) %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <input type="hidden" name="offer[user_receiver_id]" value="<%= proposal_receiver_id(@offer.proposal) %>" />
    <input type="hidden" name="offer[money_attributes][user_id]" value="nil" id="usuario_id" />
    <input type="hidden" name="offer[money_attributes][quantity]" value="0" id="usuario_dinero" />

    <div class="offer_summary">
      <div class="title">
        <div class="description">Resumen de la oferta</div>
      </div>
      <div class="offer_inform">

        <div class="offer_header">
          <%= proposal_composer_first_name(@offer.proposal).upcase %>
        </div>
        <div class="offer_triangle">
          <div class="triangle"></div>
        </div>

        <div class="offer_items">
          <div class="recieved" id="summary_offer_received_products_container">
            <% contador = 0 %>
            <% proposal_receiver_products(@offer.proposal).each do |product| %>
              <div class="product" product_id="<%= id(product) %>" item_id="<%= id(product) %>"><div class="delete_button">x</div>
                <div class="quantity_container"><%= quantity(product) %></div>
                <div class="product_image">
                  <%= image(product) %>
                </div>
                <div class="product_title">
                  <%= name(product) %>
                </div>
                 <div class="data_input">
                  <input type="hidden" name="offer[receiver_attributes][products_attributes][<%= contador %>][id]" value="<%= id(product) %>">
                  <input type="hidden" name="offer[receiver_attributes][products_attributes][<%= contador %>][item_id]" value="<%= id(product) %>">
                  <input type="hidden" name="offer[receiver_attributes][products_attributes][<%= contador %>][quantity]" value="<%= quantity(product) %>" id="<%= id(product) %>" item_id="<%= id(product) %>">
                </div>
              </div>
              <% contador = contador + 1 %>
            <% end %>
            <div class="money_received" id="dineroPidesEnSumario">
              <div class="money_composition"></div>
            </div>
          </div>
          <div class="given" id="summary_offer_given_products_container">
            <% contador = 0 %>
            <% offer_composer_products(@offer).each do |product| %>
              <div class="product" product_id="<%= id(product) %>" item_id="<%= id(product) %>"><div class="delete_button">x</div>
                <div class="quantity_container"><%= quantity(product) %></div>
                <div class="product_image">
                  <%= image(product) %>
                </div>
                <div class="product_title">
                  <%= name(product) %>
                </div>
                 <div class="data_input">
                  <input type="hidden" name="offer[composer_attributes][products_attributes][<%= contador %>][id]" value="<%= id(product) %>">
                  <input type="hidden" name="offer[composer_attributes][products_attributes][<%= contador %>][item_id]" value="<%= id(product) %>">
                  <input type="hidden" name="offer[composer_attributes][products_attributes][<%= contador %>][quantity]" value="<%= quantity(product) %>" id="<%= id(product) %>" item_id="<%= id(product) %>">
                </div>
              </div>
              <% contador = contador + 1 %>
            <% end %>
            <div class="money_given" id="dineroOfrecesEnSumario">
              <div class="money_composition"></div>
            </div>
          </div>
        </div>

        <div class="offer_info">
          <div class="profile_image">
            <%= offer_composer_image(@offer) %>
          </div>
          <div class="description">
            <div class="offer_message">
              <%= form.text_area :initial_message, :placeholder => "Mensaje Inicial", :rows => "2" %>
            </div>
          </div>
          <div class="offer_buttons">
            <%= form.submit "submit", :id => 'edit-offer-send-button', :class =>  "btn btn-primary" %>
            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
          </div>
        </div>

      </div>
    </div>
  <% end %>
</div>