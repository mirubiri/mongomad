<!DOCTYPE html>
<html>

<%= render partial: 'layouts/global_partials/metadata' %>

<body>
  <div id="page">
    <% if flash[:alert] %>
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <div class="alert alert-error">
        <%= flash[:alert] %>
      </div>
    <% end %>
    <% if flash[:notice] %>
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <div class="alert alert-success">
        <%= flash[:notice] %>
      </div>      
    <% end %>
    <% if flash[:message] %>
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <div class="alert alert-error">
        <%= flash[:message] %>
      </div>      
    <% end %>
  </div>
  <%= render :partial => "layouts/#{controller.sub_layout}" %>
</body>

</html>