
<div class="registration_user_fields">

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="registration_email_field">
      <%= f.label :email, :class => "email_label" %>
      <%= f.email_field :email %>
    </div>

    <div class="registration_pass_field">
      <%= f.label :password, :class => "pass_label" %>
      <%= f.password_field :password %>
    </div>

    <div class="registration_confirm_pass_field">
      <%= f.label :password_confirmation, :class => "pass_label" %>
      <%= f.password_field :password_confirmation %>
    </div>

    <div><%= f.submit "Sign up", :class => "signup_button" %></div>
  <% end %>

</div>

<%#= render "devise/shared/links" %>