<% if (user_offers(@user).count != 0)%>
  <% @offers.each do |offer| %>
    <div class="offer" id="<%= offer_composer_id(offer) %>">
      <div id="options">
        <div class="menu">
          <%= link_to "Eliminar Oferta",
                user_offer_path(current_user,id(offer)),
                :method => :delete,
                :confirm => "Are you sure?" %>
          <a href="#blank">Opcion 2</a>
        </div>
      </div>
      <div class="offer_header">
        <div class="triangle">
          <img src="http://localhost:3000/images/optionsicon.png" alt="options" id="options_button">
        </div>
        <div class="profile_image">
          <%= link_to offer_composer_image(offer),
            :controller => "users",
            :action => "show",
            :id => offer_composer_id(offer)
          %>
        </div>
        <div class="description">
            <%= message(offer) %>
        </div>
      </div>
      <div class="offer_items">
        <div class="recieved">
          <% offer_composer_products(offer).each do |product| %>
            <div class="image_container">
              <div class="quantity_container"><%= quantity(product) %></div>
              <%= product_image(product) %>
            </div>
          <% end %>
        </div>
        <div class="given">
          <% offer_receiver_products(offer).each do |product| %>
            <div class="image_container">
              <div class="quantity_container"><%= quantity(product) %></div>
              <%= product_image(product) %>
            </div>
          <% end %>
        </div>
      </div>
      <% if id(@user) == id(current_user) %>
        <%= form_for [current_user,@negotiation] do |form| %>
        <input type="hidden" name="offer_id" value="<%= id(offer)%>" />
          <div class="offer_button">
            <%= form.submit "negociar" %>
          </div>
        <% end %>
      <% else %>
        <%= form_for [current_user,@negotiation] do |form| %>
          <input type="hidden" name="offer_id" value="<%= id(offer)%>" />
          <div class="offer_button">
            <%= form.submit "para mi" %>
          </div>
        <% end %>
      <% end %>
      <div class="offer_date">
        <%= date_time(offer) %>
      </div>
    </div>
  <% end %>
<% else %>
  <div class="no_elements">
    <p>El usuario no tiene ninguna oferta actualmente</p>
  </div>
<% end %>