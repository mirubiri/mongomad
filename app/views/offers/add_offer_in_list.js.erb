//Helper que permite animar el primer elemento
function animateNewElement(){
  $('#ppal_container')
  .children()
  .first()
  .addClass("new_request_style")
  .css('opacity', 0)
  .hide()
  .slideDown()
  .animate(
    { opacity: 1 },
    { queue: false, duration: 1500 }
  )
  .animate({backgroundColor: '#ffffff'}, 800, function(){
    $(this).removeClass("new_request_style");
  });
}
