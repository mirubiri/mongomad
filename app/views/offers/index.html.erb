
<section class="userside" id="user-side">
  
  <aside class="userside_profile">
    <div class="image"></div>
    <div class="user_name">user_name</br>user_nationality</div>
    <a href="newOffer.html" target="_blank">
      <button id="new-offer" class="profile_button">nueva oferta</button>
    </a>
    <nav class="profile_menu">
      <div class="menu_icon"><a href="profile.html">perfil</a></div>
      <div class="menu_icon"><a href="products.html">prod</a></div>
      <div class="menu_icon"><a href="alerts.html">alertas</a></div>
    </nav>
  </aside>
  
  <aside class="userside_petitions">
      <a href="newPetition.html">
        <button id="new-petition" class="add_petition_button">Nueva Petici√≥n
        </button>
      </a>
    <aside class="petitions_petitionsList">
      <% @requests.each do |offer| %>
        <div class="petition">
          <div class="profile_image"></div>
          <div class="description"></div>
        </div> 
        <tr>
          <td><%= link_to 'Show', offer %></td>
          <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
          <td><%= link_to 'Destroy', offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>                
    </aside>
  </aside>
    
</section>


<section class="contentside" id="content-side">
  
  <header class="contentside_header">
    <div class="contentsideheader_menu">
       <nav>
        <div class="nav_element">
          <div class="icono_navegacion"></div>
          <a href="offers.html">Ofertas</a>
        </div>
        <div class="nav_element">
          <div class="icono_navegacion"></div>
          <a href="negotiations.html">Negociaciones</a>
        </div>
        <div class="nav_element">
          <div class="icono_navegacion"></div>
          <a href="deals.html">Acuerdos</a>
        </div>
       </nav>
       <div class="contentsideheader_search">
        <input type="search">
       </div>
    </div>
  </header>
  
  <aside class="contentside_elementList" id="ppal_container">    
    <% @offers.each do |offer| %>
      <div class="offer">
        <div class="offer_header">
          <div class="triangle"></div>
          <div class="profile_image"></div>
          <div class="description">
            <textarea name="offer-description" id="offer-description" cols="1" rows="1">
            </textarea>
          </div>
        </div>
        <div class="offer_things">
          <div class="recieved">
            <div class="thing"></div>
          </div>
          <div class="given">
            <div class="thing"></div>
          </div>
        </div>
        <div class="offer_button">
          <button>enviar</button>
        </div>
      </div>
      <tr>
        <td><%= link_to 'Show', offer %></td>
        <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
        <td><%= link_to 'Destroy', offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>            
  </aside>
  
</section>

