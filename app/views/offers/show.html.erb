<div class="offer" id="<%= offer_composer_id(@offer) %>">
  <div id="options">
    <div class="menu">
      <%= link_to "Eliminar Oferta",
            user_offer_path(current_user,id(@offer)),
            :method => :delete,
            :confirm => "Are you sure?" %>
      <a href="#blank">Opcion 2</a>
    </div>
  </div>
  <div class="offer_header">
    <div class="triangle">
        <!-- <img src="http://localhost:3000/images/optionsicon.png" alt="options" id="options_button"> -->
    </div>
    <div class="profile_image">
      <%= link_to proposal_composer_image(@offer.proposal),
        :controller => "users",
        :action => "show",
        :id => proposal_composer_id(@offer.proposal)
      %>
    </div>
    <div class="description">
      <div class="composer_name">
        <%= proposal_composer_first_name(@offer.proposal) %>
      </div>
      <div class="offer_message">
        <%= message(@offer) %>
      </div>
    </div>
  </div>
  <div class="offer_items">
    <div class="recieved">
      <% proposal_composer_products(@offer.proposal).each do |product| %>
        <div class="image_container">
          <%= product_image(product) %>
          <div class="quantity_container"><%= product_quantity(product) %></div>
          <div class="artistic_layer_big"></div>
        </div>
      <% end %>
    </div>
    <div class="given">
      <% proposal_receiver_products(@offer.proposal).each do |product| %>
        <div class="image_container">
          <%= product_image(product) %>
          <div class="quantity_container"><%= product_quantity(product) %></div>
          <div class="artistic_layer_small"></div>
        </div>
      <% end %>
    </div>
  </div>

  <% if id(@user) =! proposal_composer_id(@offer.proposal) %>
    <% if id(@user) == id(current_user) %>
      <%= form_for [current_user,@negotiation] do |form| %>
        <input type="hidden" name="offer_id" value="<%= id(@offer)%>" />
        <div class="offer_button">
          <%= form.submit "negociar", :class => "btn btn-small disabled", :id => "negotiate_button"  %>
        </div>
      <% end %>
    <% else %>
      <%= form_for [current_user,@negotiation] do |form| %>
        <input type="hidden" name="offer_id" value="<%= id(@offer)%>" />
        <div class="offer_button">
          <%= form.submit "para mi", :class => "btn-small disabled", :id => "negotiate_button" %>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <%= link_to "edit",
            {:controller => "offers",
            :action => "edit",
            :user_id => id(current_user),
            :id => @offer.id},
            {:remote => true,
             :id => "edit_offer_link"} %>
  <% end %>

  <div class="offer_date">
    <%= date_time(@offer) %>
  </div>
</div>