//Quito la ventana modal
$('#edit-offer-form').modal('hide');

$('#edit-offer-form').on('hidden', function () {
  //Cuando la modal se quita, oculto el contenedor principal, le cargo los datos nuevos y destruyo el masonry, todo esto no se ve
  $('#ppal_container')
  .hide()
  .html("<%= escape_javascript(render :partial => 'offers/partials/offer').html_safe %>")
  .masonry('destroy');

  //REcargo el masonry y dejo que se vea todo
  masonryOffer();
  $('#ppal_container').show();
})