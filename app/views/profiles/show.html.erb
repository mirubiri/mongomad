                <div class="result_number">500h</div>
              </div>
              <div class="result_block">
                <div class="result_title">Dayle use average</div>
                <div class="result_number">2h</div>
              </div>
            </div>
            <div class="graphique_side">
              <div class="graphique"></div>
            </div>
          </div>
        </div>
        <div class="comments_recieved">
          <div class="title">COMENTARIOS</div>
          <div id="comment_list">
            <div class="comment">
              <div class="comment_header">
                <div class="profile_image"></div>
                <div class="description">
                  <div class="username_and_valuation">
                    <div class="user_name">Nombre Usuario</div>
                    <div class="user_valuation">Valoracion</div>
                  </div>
                  <div class="comment_user_text">Texto del comentario</div>
                </div>
              </div>
            </div>
            <div class="comment">
              <div class="comment_header">
                <div class="profile_image"></div>
                <div class="description">
                  <div class="username_and_valuation">
                    <div class="user_name">Nombre Usuario</div>
                    <div class="user_valuation">Valoracion</div>
                  </div>
                  <div class="comment_user_text">Texto del comentario</div>
                </div>
              </div>
            </div>
            <div class="comment">
              <div class="comment_header">
                <div class="profile_image"></div>
                <div class="description">
                  <div class="username_and_valuation">
                    <div class="user_name">Nombre Usuario</div>
                    <div class="user_valuation">Valoracion</div>
                  </div>
                  <div class="comment_user_text">Texto del comentario</div>
                </div>
              </div>
            </div>
            <div class="comment">
              <div class="comment_header">
                <div class="profile_image"></div>
                <div class="description">
                  <div class="username_and_valuation">
                    <div class="user_name">Nombre Usuario</div>
