  <div class="personal_data">
    <div class="person_info">
      <div class="title">INFORMACION PERSONAL</div>
      <div class="image_side">
          <%= image_service_tag(main_image(@user)) %>
          <div class="name"><textarea readonly="readonly"><%= full_name(@user) %></textarea></div>
          <div class="address"><textarea readonly="readonly">Logroño,España</textarea></div>
      </div>
      <div class="info_side">
        <div class="info_element">
          <div class="info_element_title">E-Mail: </div>
