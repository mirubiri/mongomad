<% messages(negotiation).each do |message| %>
  <div class="comment">
    <div class="comment_user_image">
      <%= image(message) %>
    </div>
    <div class="comment_text">
      <%= text(message) %>
    </div>
    <div class="comment_datetime">
      <%= date_time(message) %>
    </div>
  </div>
<% end %>