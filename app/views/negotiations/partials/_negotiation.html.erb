<% @negotiations.each do |negotiation| %>
  <div class="negotiation" id="negotiation<%= negotiation._id %>">  
    <div class="proposition_container">
      <div class="proposition">
         <div class="proposition_header">
          <div class="triangle"></div>
          <div class="profile_image">
            <%= image_tag(negotiation.proposals.last.composer.image) %>
          </div>
        </div>
        <div class="offered_things">          
          <% negotiation.proposals.last.composer.products.each do |product| %>
            <div class="offered_product">              
              <%= image_tag(product.main_image) %>
              <div class="product-title">
                <%= product.name %>
              </div>
            </div>             
          <% end %>          
          <div class="orderer_money">
            <%#= negotiation.proposals.last.money.quantity %>
          </div>
        </div>

        <div class="orderer_things">          
          <% negotiation.proposals.last.receiver.products.each do |product| %>
            <div class="orderer_product">
              <%= image_tag(product.main_image) %>
              <div class="product-title">
                <%= product.name %>
              </div>
            </div>          
          <% end %>          
          <div class="orderer_money">
            <%#= negotiation.proposals.last.money.quantity %>
          </div>
        </div>      
      </div>
      <div class="actions">
        <div class="reputation">                
        </div>
        <div class="action_buttons"> 
          <button>Aceptar oferta</button>
          <button>Cambiar Oferta</button>             
        </div>
      </div>
    </div>
    <div class="dialog_container">
      <div class="dialog_head">
        <div class="dialogin">Conversation...</div>
        <%= link_to "x", 
              user_negotiation_path(current_user,negotiation.id),
              :method => :delete, 
              :confirm => "Are you sure?" 
        %>         
      </div>
      <div class="conversation" id="conversationofnegotiation">
        <% negotiation.messages.each do |message| %>   
          <div class="comment">
            <div class="comment_user_image">
              <%= image_tag(message.image) %>          
            </div>
            <div class="comment_text"> 
              <%= message.text %>              
            </div>
          </div> 
        <% end %>     
      </div>
      
      <div class="writting_box">
        <form action="">
          <div class="message">
            <input type="">                
          </div>
          <div class="sender">
            <input type="">
          </div>
        </form>
      </div>
    </div>
  </div>
<% end %>

  
